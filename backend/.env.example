# Physical AI Textbook Backend - Environment Variables Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# Application
APP_NAME="Physical AI Textbook API"
APP_VERSION="1.0.0"
ENVIRONMENT="production"
DEBUG=false

# Server
HOST="0.0.0.0"
PORT=8000
RELOAD=false

# Database (Neon PostgreSQL)
# Get your connection string from: https://neon.tech
DATABASE_URL="postgresql://user:password@host:5432/database"

# Qdrant Vector Database
# Cloud: https://cloud.qdrant.io
QDRANT_URL="https://your-cluster.gcp.cloud.qdrant.io"
QDRANT_API_KEY="your-qdrant-api-key"
QDRANT_COLLECTION_NAME="textbook_embeddings"
QDRANT_VECTOR_SIZE=1536

# OpenAI API
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-your-openai-api-key"
OPENAI_MODEL="gpt-4o-mini"
OPENAI_EMBEDDING_MODEL="text-embedding-3-small"
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=1000

# Authentication & Security
JWT_SECRET_KEY="your-secret-key-change-in-production"
JWT_ALGORITHM="HS256"
JWT_EXPIRATION_MINUTES=60
JWT_REFRESH_EXPIRATION_DAYS=7
BCRYPT_ROUNDS=12

# CORS - Add your frontend URLs
CORS_ORIGINS=["https://your-frontend-url.vercel.app","https://your-custom-domain.com"]

# Rate Limiting (requests per minute per user)
RATE_LIMIT_CHAT=100
RATE_LIMIT_TRANSLATE=50
RATE_LIMIT_AGENT=20

# Caching (seconds)
CACHE_TTL_CHAT=3600
CACHE_TTL_TRANSLATION=1209600
REDIS_URL=""

# Logging
LOG_LEVEL="INFO"
LOG_FORMAT="json"

# Content Path (relative to project root)
CONTENT_PATH="frontend/docs"
